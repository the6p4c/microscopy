{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es6",
    "jsx": "react",

    "strict": true,
    "removeComments": false,

    "moduleResolution": "node",
    "esModuleInterop": true,

    "typeRoots": [
      "./types",
      "./node_modules/@types",
      "./typings.d.ts"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/",
    "rollup.config.ts"
  ]
}
